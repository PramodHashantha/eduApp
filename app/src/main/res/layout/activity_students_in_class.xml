<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/students_in_class"
    tools:context=".StudentsInClass">

    <EditText
        android:id="@+id/etStudentEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter Student email" />

    <Button
        android:id="@+id/btnAddNewStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Add New Student" />

    <Button
        android:id="@+id/btnRemoveStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Remove Student" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStudentInClass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnRemoveStudent"
        android:layout_marginTop="16dp" />
</RelativeLayout>
